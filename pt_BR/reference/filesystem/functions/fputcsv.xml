 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Exemplo de <function>fputcsv</function></title>
    <programlisting role="php">
<![CDATA[
<?php

$lista = array (
     array('aaa', 'bbb', 'ccc', 'dddd'),
     array('123', '456', '789'),
     array('"aaa"', '"bbb"')
);

$fp = fopen('arquivo.csv', 'w');

 foreach ($lista as $linha) {
     fputcsv($fp, $linha);
}

fclose($fp);
?>
]]>
    </programlisting>
     <para>O exemplo acima irá escrever o seguinte no arquivo <literal>file.csv</literal>:</para>
     <screen>
 <![CDATA[
 aaa,bbb,ccc,dddd
 123,456,789
 """aaa""","""bbb"""

 ]]>
     </screen>   
   </example>
  </para>
 </refsect1>

